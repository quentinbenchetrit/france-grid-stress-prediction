# Copy this file to create your local .env:
#   cp .env.example .env
# Then fill in the real values in .env (never commit .env).

# ----------------------------
# RTE API (OAuth2 client credentials)
# ----------------------------
RTE_CLIENT_ID=your_rte_client_id_here
RTE_CLIENT_SECRET=your_rte_client_secret_here

# Optional (can be hardcoded if preferred)
RTE_TOKEN_URL=https://digital.iservices.rte-france.com/token/oauth/
RTE_BASE_URL=https://digital.iservices.rte-france.com/open_api/

# ----------------------------
# Project settings
# ----------------------------
TIMEZONE=UTC

# Data directories
DATA_DIR=data
DATA_EXTERNAL_DIR=data/external
DATA_RAW_DIR=data/raw
DATA_INTERIM_DIR=data/interim
DATA_PROCESSED_DIR=data/processed

# Outputs
MODELS_DIR=models
REPORTS_DIR=reports

# ----------------------------
# Weather settings
# ----------------------------
WEATHER_PROVIDER=open-meteo
WEATHER_API_KEY=

# ----------------------------
# Execution / reproducibility
# ----------------------------
LOG_LEVEL=INFO
SEED=42
