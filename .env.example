
# Environment variables — France Grid Stress Prediction


#  General 
ENV=development
PROJECT_NAME=france-grid-stress-prediction
TIMEZONE=Europe/Paris

# RTE API (éCO₂mix)
# Required for near real-time and historical data fetch
RTE_CLIENT_ID=your_rte_client_id_here
RTE_CLIENT_SECRET=your_rte_client_secret_here
RTE_TOKEN_URL=https://digital.iservices.rte-france.com/token/oauth/
RTE_API_BASE_URL=https://digital.iservices.rte-france.com/open_api/

# Weather API 
# Open-Meteo / Météo-France compatible
WEATHER_API_PROVIDER=open-meteo
WEATHER_API_BASE_URL=https://api.open-meteo.com/v1/
WEATHER_API_TIMEOUT=30

#  Data directories 
# Paths are relative to project root
DATA_DIR=data
DATA_RAW_DIR=data/raw
DATA_INTERIM_DIR=data/interim
DATA_PROCESSED_DIR=data/processed

#  Forecast configuration 
FORECAST_HORIZON_HOURS=24
TIME_RESOLUTION_MINUTES=30

# Modeling
RANDOM_SEED=42
N_JOBS=-1

# Logging 
LOG_LEVEL=INFO

#  Optional (future extensions)
# Market data / prices
# EPEX_API_KEY=

# External calendars (holidays, school vacations)
# CALENDAR_API_KEY=

# Carbon intensity / emissions
# CO2_API_KEY=

